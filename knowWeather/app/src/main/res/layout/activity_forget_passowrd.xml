<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.welcomeActivity"
    android:background="#ecf4ff"
    >

    <android.support.v7.widget.CardView
        android:layout_marginTop="-190dp"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        app:cardBackgroundColor="@color/bg_welcome"
        app:cardCornerRadius="200dp"
        android:clickable="false"
        android:id="@+id/we_card">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/useraccount_img"
                android:layout_marginTop="300dp"
                android:src="@drawable/useraccount"
                android:layout_width="36dp"
                android:layout_height="36dp" />
            <EditText
                android:id="@+id/useraccount"
                android:textColor="#000000"
                android:layout_marginTop="300dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/useraccount_img"
                android:hint="11位手机号"
                android:layout_width="219dp"
                android:layout_height="wrap_content" />
            <TextView
                android:visibility="gone"
                android:id="@+id/mistakemsg1"
                android:layout_marginLeft="43dp"
                android:textColor="@color/mistakemsg"
                android:layout_below="@+id/useraccount"
                android:text="测试"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/vercod_img"
                android:layout_marginTop="383dp"
                android:src="@drawable/vercode"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <EditText
                android:id="@+id/vercode"
                android:textColor="#000000"
                android:layout_marginTop="378dp"
                android:layout_marginLeft="11dp"
                android:layout_toRightOf="@id/vercod_img"
                android:hint="验证码"
                android:layout_width="159dp"
                android:layout_height="wrap_content" />
            <Button
                android:background="@drawable/get_code_btn"
                android:layout_marginTop="388dp"
                android:id="@+id/btn_get_code"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@+id/vercode"
                android:text="获取验证码"
                android:textSize="10dp" />
            <TextView
                android:visibility="gone"
                android:id="@+id/mistakemsg2"
                android:layout_marginLeft="43dp"
                android:textColor="@color/mistakemsg"
                android:layout_below="@+id/vercode"
                android:text="测试"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>
        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/iv_next"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerHorizontal="false"
            android:layout_marginTop="540dp"
            android:src="@drawable/next" />
    </android.support.v7.widget.CardView>

