<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PersonMsgActivity"
    android:background="#f3f9fb">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:contentInsetStartWithNavigation="0dp"
        app:navigationIcon="@drawable/ic_back"
        android:background="@color/settingbg"
        android:layout_alignParentTop="true">
    <TextView
        android:textSize="16dp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:text="我的资料          "
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            app:cardElevation="5dp"
            app:cardMaxElevation="5dp"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <RelativeLayout
                android:id="@+id/rv_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="14sp"
                    android:id="@+id/tv_nickname"
                    android:text="昵称"
                    android:gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="50dp" />
                <EditText
                    android:id="@+id/et_name"
                    android:paddingLeft="10dp"
                    android:text="测试用户"
                    android:textSize="14sp"
                    android:background="@null"
                    android:layout_toRightOf="@id/tv_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
                <TextView
                    android:layout_below="@id/tv_nickname"
                    android:textSize="14sp"
                    android:id="@+id/tv_birthday"
                    android:text="生日"
                    android:gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:paddingLeft="10dp"
                    android:layout_toRightOf="@id/tv_birthday"
                    android:layout_below="@id/tv_nickname"
                    android:textSize="14sp"
                    android:id="@+id/tv_birthday2"
                    android:text="点击选择你的生日"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>
        
        <android.support.v7.widget.CardView
            android:layout_marginTop="30dp"
            app:cardElevation="5dp"
            app:cardMaxElevation="5dp"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/rv_phone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_phone"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:text="手机"
                        android:layout_width="100dp"
                        android:layout_height="50dp" />
                    <TextView
                        android:layout_toRightOf="@id/tv_phone"
                        android:id="@+id/phone"
                        android:textSize="15sp"
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"
                        android:text="123456789001"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:id="@+id/iv_phone"
                        android:layout_marginRight="8dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_next"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rv_psw"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <TextView
                        android:gravity="center"
                        android:textSize="15sp"
                        android:text="修改密码"
                        android:layout_width="100dp"
                        android:layout_height="50dp" />
                    <ImageView
                        android:id="@+id/iv_passowrd"
                        android:layout_marginRight="8dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_next"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                </RelativeLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</RelativeLayout>