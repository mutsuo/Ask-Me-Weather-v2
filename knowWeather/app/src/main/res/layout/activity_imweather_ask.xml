<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.IMWeatherAskActivity"
    android:orientation="vertical"
    android:background="#f3f3f3">
    <include layout="@layout/common_titlebar" />
    <LinearLayout
        android:id="@+id/llContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipe_chat"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_chat_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                android:background="#ecf7fd"/>
        </android.support.v4.widget.SwipeRefreshLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#d9d9d9" />

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rlrecord"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="#f4fbff">
            <ImageView
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_alignParentBottom="true"
                android:id="@+id/iv_editext"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/keyboard"/>
            <Button
                android:id="@+id/btn_speak"
                android:textColor="@android:color/white"
                android:text="按住说"
                android:background="@drawable/record_btn_bg"
                android:layout_centerInParent="true"
                android:layout_width="90dp"
                android:layout_height="90dp" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#f3f3f3"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/ivAudio"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10px"
                android:src="@mipmap/ic_audio" />
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="8dp"
                android:paddingTop="5dp"
                android:paddingRight="8dp"
                android:paddingBottom="5dp">
                <EditText
                    android:includeFontPadding="false"
                    android:id="@+id/et_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/message_shap_chat_bg"
                    android:maxLines="3"
                    android:minHeight="36dp"
                    android:paddingLeft="10dp"
                    android:textSize="15sp" />
            </RelativeLayout>

            <ImageView
                android:src="@drawable/send"
                android:id="@+id/iv_send"
                android:layout_width="36dp"
                android:layout_height="36dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#d9d9d9" />
    </LinearLayout>
</LinearLayout>