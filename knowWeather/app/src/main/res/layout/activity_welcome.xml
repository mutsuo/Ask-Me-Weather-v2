<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.welcomeActivity"
    >

    <android.support.v7.widget.CardView
        android:layout_marginTop="-190dp"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        app:cardBackgroundColor="@color/bg_welcome"
        app:cardCornerRadius="200dp"
        android:clickable="false"
        android:id="@+id/we_card">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/we_logo"
                android:layout_marginTop="313dp"
                android:src="@drawable/logo"
                android:layout_width="100dp"
                android:layout_height="100dp" />
            <TextView
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_marginTop="330dp"
                android:text="Hi，我是小天很高兴认识你"
                android:layout_width="143dp"
                android:layout_height="59dp"
                android:layout_toEndOf="@id/we_logo"
                android:layout_toRightOf="@id/we_logo" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:textSize="15sp"
        android:background="@drawable/button_filet_shape"
        android:textColor="@android:color/white"
        android:text="登录"
        android:id="@+id/bt_log_in"
        android:layout_centerHorizontal="true"
        android:layout_width="268dp"
        android:layout_height="50dp"
        android:layout_below="@+id/we_card"
        android:layout_marginTop="60dp"
        android:gravity="center" />

    <Button
        android:textSize="15sp"
        android:id="@+id/bt_log_up"
        android:background="@drawable/button_filet_shape"
        android:textColor="@android:color/white"
        android:text="注册"
        android:layout_centerHorizontal="true"
        android:layout_width="268dp"
        android:layout_height="50dp"
        android:layout_below="@+id/bt_log_in"
        android:layout_marginTop="20dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/tv_test"
        android:textSize="15sp"
        android:gravity="center"
        android:text="体验一下"
        android:textColor="@color/we_text_color"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_below="@+id/bt_log_up"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>